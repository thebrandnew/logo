// value
:root
  --shadow-s: 0 1px 4px alpha(black, 0.1)
  --shadow-m: 0 2px 8px alpha(black, 0.1)
  --shadow-l: 0 4px 24px alpha(black, 0.1)
  --shadow-ll: 0 8px 64px alpha(black, 0.1)

// class
.shadow-s
  box-shadow var(--shadow-s)
.shadow-m
  box-shadow var(--shadow-m)
.shadow-l
  box-shadow var(--shadow-l)
.shadow-ll
  box-shadow var(--shadow-ll)
