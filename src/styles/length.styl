// 默认响应式尺寸
:root
  --length-unit: 1px // 根据不同屏幕阅读距离即时调整
  --length-ssss: calc(--length-unit * 2)
  --length-sss : calc(--length-unit * 4)
  --length-ss  : calc(--length-unit * 8)
  --length-s   : calc(--length-unit * 12)
  --length-m   : calc(--length-unit * 16) // 标准格子尺寸
  --length-l   : calc(--length-unit * 24)
  --length-ll  : calc(--length-unit * 32)
  --length-lll : calc(--length-unit * 48)
  --length-llll: calc(--length-unit * 64)
