// value
:root
  --radius-s: var(--length-s)
  --radius-m: var(--length-m)
  --radius-l: var(--length-l)
  --radius-ll: var(--length-ll)

// class
.radius-s
  border-radius var(--radius-s)
.radius-m
  border-radius var(--radius-s)
.radius-l
  border-radius var(--radius-s)
.radius-xl
  border-radius var(--radius-s)
.radius-pill
  border-radius 99999rem
.radius-oval
  border-radius 100%
