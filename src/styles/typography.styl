// font scale

.fs-sss
  font-size .625rem
  line-height .75rem
.fs-ss
  font-size .75rem
  line-height 1rem
.fs-s
  font-size .875rem
  line-height 1rem
.fs-m
  font-size 1rem
  line-height 1.25rem
.fs-l
  font-size 1.125rem
  line-height 1.5rem
.fs-ll
  font-size 1.25rem
  line-height 1.5rem
.fs-lll
  font-size 1.5rem
  line-height 1.75rem
.fs-llll
  font-size 1.875rem
  line-height 2rem
.fs-lllll
  font-size 2.25rem
  line-height 2.25rem
.fs-llllll
